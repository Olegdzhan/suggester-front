.lib-navbar-container
	height: 80px
	width: 100%
	border-bottom: 1px solid #ddd
	background-color: white
	
.lib-navbar
	width: 1100px
	margin: 0 auto
	padding: 20px 0
	position: relative
	
.figure-navbar-logo
	width: 30%
	height: 40px
	display: inline-block
	position: absolute
	left: 0
	top: 5px
	
.figure-navbar-logo__img
	width: 40px
	height: 40px
	margin-right: 10px
	display: inline-block
	position: absolute
	left: 0
	top: 0
	
.figcaption-navbar-logo
	display: inline-block
	padding: 3px 0 3px 10px
	border-left: 1px solid #ddd
	font-size: 30px
	margin-left: 52px
	
.lib-navigation
	display: inline-block
	position: absolute
	width: 30%
	height: 40px
	top: 20px
	right: 0
	text-align: right
	li 
		display: inline-block
		padding-left: 40px

.lib-navigation__img
	width: 40px
	height: 40px
	
.lib-find-form
	position: absolute
	width: 250px
	height: 30px
	left: 50%
	margin-Left: -125px
	top: 25px
	
.lib-find-form__input
	padding: 8px
	font-size: 14px
	border-top-left-radius: 7px
	border-bottom-left-radius: 7px
	border: 1px solid #ddd
	border-right: none
	width: 200px
	height: 30px
	color: #333
	text-align: center
	background-color: #eee
	&:focus
		text-align: left
		background-color: white
		outline: none
	
.lib-find-form__button
	padding: 3px
	width: 50px
	height: 30px
	border: 1px solid #ddd		
	border-top-right-radius: 8px
	border-bottom-right-radius: 8px
	background-color: #eee
	cursor: pointer
	&:focus
		outline: none
	img
		width: 15px
		height: 15px